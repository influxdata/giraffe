{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
